<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebg">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/startImage2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="33dp"
        android:src="@drawable/dance"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView

            android:id="@+id/calculationTxt1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/whitebtnbg"
            android:gravity="center"
            android:text="TYPE SOMETHING"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="21dp"
            android:textStyle="bold" />


         <EditText
             android:id="@+id/edcount"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:background="@drawable/textfield2"
             android:inputType="text"
             android:hint="Type Here"
             android:layout_gravity="center"
             android:gravity="center"
             android:textColor="#ffff"
             />


        <ImageButton
            android:id="@+id/speackerBtn"
            android:layout_marginTop="40dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/circlebtn"
            android:enabled="false"
            android:src="@drawable/ic_baseline_volume_up_24px"
            />


        <TextView
            android:id="@+id/txt2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="RESULT"
            android:textColor="#ffff"
            android:textSize="21dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultTxt2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textfield2"
            android:gravity="center"
            android:textColor="#ffff"
            android:textSize="21dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/homebtn2"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/homebg"
            android:src="@drawable/ic_sharp_home_24px"/>

        <ImageButton
            android:id="@+id/infobtn2"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/homebg"
            android:src="@drawable/ic_baseline_info_24px"/>

        <ImageButton
            android:id="@+id/cancelbtn2"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/homebg"
            android:src="@drawable/ic_baseline_highlight_off_24px"/>


    </LinearLayout>

</LinearLayout>