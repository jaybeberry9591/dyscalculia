<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/homebg"
    tools:context=".rrmoney">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homebtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/circlebtn"
            android:src="@drawable/ic_sharp_home_24px" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/infobtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/circlebtn"
            android:src="@drawable/ic_baseline_info_24px" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/cancelbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/circlebtn"
            android:src="@drawable/ic_baseline_highlight_off_24px" />


    </LinearLayout>

    <TextView
        android:id="@+id/rrcounttxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="YOUR MONEY"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/whitebtnbg"
        android:textSize="21dp"
        android:gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/rrcounttxt2"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textSize="21dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textfield2"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            />

        <ImageButton
            android:id="@+id/speackerrrcounttxt2Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/ic_baseline_volume_up_24px" />


    </LinearLayout>



    <TextView
        android:id="@+id/rrtxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="DIFFERNCE"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/whitebtnbg"
        android:textSize="21dp"
        android:gravity="center"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/rrtxt2"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textSize="21dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textfield2"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            />

        <ImageButton
            android:id="@+id/speackerrrtxt2Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/ic_baseline_volume_up_24px" />


    </LinearLayout>



    <ScrollView
        android:id="@+id/rrscrollview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/homebg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/rronetkcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/onetkcoin" />


            <ImageButton
                android:id="@+id/rrtwotkcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/twotkcoin" />


            <ImageButton
                android:id="@+id/rrfivetkcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/fivetkcoin" />

            <ImageButton
                android:id="@+id/rrtk2"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk2" />


            <ImageButton
                android:id="@+id/rrtk5"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk5" />

            <ImageButton
                android:id="@+id/rrtk10"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk10" />

            <ImageButton
                android:id="@+id/rrtk20"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk20" />

            <ImageButton
                android:id="@+id/rrtk50"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk50" />

            <ImageButton
                android:id="@+id/rrtk100"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk100" />

            <ImageButton
                android:id="@+id/rrtk500"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk500" />

            <ImageButton
                android:id="@+id/rrtk1000"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tk1000" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>